<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layoutDescription="@xml/activity_user_profile_scene2"
    tools:context=".Activities.UserProfile">

    <!-- ImageView cho img_bag -->
    <ImageView
        android:id="@+id/img_bag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_profile"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"/>

    <!-- CircleImageView -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_view_user_avt"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/bg_profile"
        app:layout_constraintTop_toTopOf="@id/img_bag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="100dp" />

    <!-- TextView -->
    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="User"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_view_user_avt" />

</androidx.constraintlayout.motion.widget.MotionLayout>
