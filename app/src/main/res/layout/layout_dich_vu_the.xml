<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="center">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <ImageButton
                    android:id="@+id/img_tra_cuu"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bo_img_chuyen_tien"
                    app:srcCompat="@drawable/tracuu"
                    android:scaleType="centerInside"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/tv_tra_cuu"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Tra cứu/Sao kê thẻ" />
        </LinearLayout>

        <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:orientation="vertical">

            <ImageButton
                    android:id="@+id/img_gia_han"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bo_img_chuyen_tien"
                    app:srcCompat="@drawable/giahan"
                    android:scaleType="centerInside"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/tv_gia_han"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Gia hạn thẻ" />
        </LinearLayout>

        <LinearLayout
                android:layout_weight="1"
                android:layout_marginStart="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageButton
                    android:id="@+id/img_phat_hanh"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bo_img_chuyen_tien"
                    app:srcCompat="@drawable/phathanh"
                    android:scaleType="centerInside"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/tv_phat_hanh"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Phát hành/Chuyển đổi thẻ" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageButton
                    android:id="@+id/img_thanh_toan_the_tin_dung"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bo_img_chuyen_tien"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/tindung"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/tv_giao_thong"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Thanh toán thẻ tín dụng" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:orientation="vertical">

            <ImageButton
                    android:id="@+id/img_dich_vu_the_khac"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bo_img_chuyen_tien"
                    app:srcCompat="@drawable/dichvukhac"
                    android:scaleType="centerInside"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/tv_tu_dong"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Dịch vụ thẻ khác" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>