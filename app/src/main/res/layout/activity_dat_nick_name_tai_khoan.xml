<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/darker_gray"
        tools:context=".Activities.TienIch.DatNickNameTaiKhoan">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool_bar_dat_nick_name_tai_khoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#7CC34A">

            <ImageView
                    android:id="@+id/toolbar_back_dat_nick_name_tai_khoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:src="@drawable/quayhome" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Danh sách nickname"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
        </androidx.appcompat.widget.Toolbar>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quý khách chưa đăng ký nickname tài khoản, vui lòng nhấn (+) để thêm mới"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="100dp" />

        <Button
                android:id="@+id/btn_quan_ly_nhom"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="right"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/circle_button"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginTop="370dp" />
    </LinearLayout>

</LinearLayout>