<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="center">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <ImageButton
                    android:id="@+id/img_tiet_kiem_thuong"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bo_img_chuyen_tien"
                    app:srcCompat="@drawable/tietkiemthuong"
                    android:scaleType="centerInside"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/tv_tiet_kiem_thuong"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Tiết kiệm thường" />
        </LinearLayout>

        <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:orientation="vertical">

            <ImageButton
                    android:id="@+id/img_tiet_kiem_linh_hoat"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bo_img_chuyen_tien"
                    app:srcCompat="@drawable/tietkiemlinhhoat"
                    android:scaleType="centerInside"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/tv_tiet_kiem_linh_hoat"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Tiết kiệm linh hoạt" />
        </LinearLayout>

        <LinearLayout
                android:layout_weight="1"
                android:layout_marginStart="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageButton
                    android:id="@+id/img_tien_gui_tich_luy"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bo_img_chuyen_tien"
                    app:srcCompat="@drawable/tienguitichluy"
                    android:scaleType="centerInside"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/tv_tien_gui_tich_luy"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Tiền gửi tích lũy" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageButton
                    android:id="@+id/img_tien_gui_cho_con"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bo_img_chuyen_tien"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/tienguichocon"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/tv_tien_gui_cho_con"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Tiền gửi cho con" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:orientation="vertical">

            <ImageButton
                    android:id="@+id/img_cai_dat_tiet_kiem_tu_dong"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bo_img_chuyen_tien"
                    app:srcCompat="@drawable/caidattietkiemtudong"
                    android:scaleType="centerInside"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:id="@+id/tv_cai_dat_tiet_kiem_tu_dong"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Cài đặt tiết kiệm tự động" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
